{
    "tasks": [
        {
            "label": "cmake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			],
			"options": {
				"cwd": "build"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": {
				"base": "$g++",
				// "fileLocation": [
                //     "/usr/bin/g++"
                // ]
			},
			"dependsOn":["mkbuild"]
        },
		{
			"label": "mkbuild",
			"type": "shell",
			"command": "mkdir",
			"args": [
				"-p",
				"build"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": {
				"base": "$g++",
				// "fileLocation": [
                //     "/usr/bin/g++"
                // ]
			},
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "cmake --build .",
			"options": {
				"cwd": "build"
			},
			"group": "build",
			"presentation": {
				// Reveal the output only if unrecognized errors occur.
				"reveal": "always",
				"clear": true
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": {
				"base": "$g++",
				// "fileLocation": [
                //     "/usr/bin/g++"
                // ]
			},
		},
		{
			"label": "run",
			"type": "shell",
			"command": "${cwd}/build/test9",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"cwd": "build"
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": {
				"base": "g++",
				// "fileLocation": [
                //     "absolute",
				// 	"/usr/bin/g++"
                // ]
			},
			"dependsOn":["compile"]
		}
    ],
    "version": "2.0.0"
}