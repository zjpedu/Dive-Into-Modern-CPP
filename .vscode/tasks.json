// https://code.visualstudio.com/docs/editor/tasks
// https://code.visualstudio.com/docs/editor/variables-reference
{
    "tasks": [
        {
            "label": "cmake",  // task的名字
			"type": "shell",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",  // debug
				".."
			],
			"options": {
				"cwd": "build"  // 表示当前执行目录build文件夹
			},
			"group": "build",
			"presentation": {  // 一些控制台显示配置
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$gcc",
			"dependsOn":["mkbuild"]  // 依赖的任务，在本任务执行前先执行mkbuild任务
        },
		{
			"label": "mkbuild",
			"type": "shell",
			"command": "mkdir",  // 调用的命令
			"args": [  // 命令参数
				"-p",
				"build"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": [
                "$gcc"
            ],
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "cmake --build .",
			"options": {
				"cwd": "build"
			},
			"group": "build",
			"presentation": {
				// Reveal the output only if unrecognized errors occur.
				"reveal": "always",
				"clear": true
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$gcc"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "${cwd}/build/test_hanoi", // 这里需要频繁修改
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"cwd": "build"
			},
			// Use the gcc compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$gcc",
			"dependsOn":["compile"]  // 在run任务执行前先执行compile任务，确保修改的代码生效
		}
    ],
    "version": "2.0.0"
}